version: '3.3'
services:
  nginx:
    image: nginx:latest
    ports:
      - "80:80"      # Map HTTP port
      - "443:443"    # Map HTTPS port (if needed)
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro  # Custom Nginx configuration file
      - ./html:/usr/share/nginx/html:ro        # Serve files from ./html directory
    restart: always
